package com.meve.sigma.beans;
/**
 * Bean utilizado para habilitar o no la escritura dentro de SIGMA
 * @author Meve Soluciones S.A. de C.V.
 */
public class EscrituraBean {
    
    private Boolean bEscritura;
	
    /**
     * COnstructor de EscrituraBean
     *
     */
	public EscrituraBean() 
	{
		bEscritura = new Boolean(false);
	}
	
	/**
	 * Constructor de Inicialización donde recibe un boolean
	 * @param b bandera
	 */
	public EscrituraBean(boolean b) 
	{
		bEscritura = new Boolean(b);
	}
	
	/**
	 * Devuelve False o True para determinar la
	 * escritura de una pagina
	 * @return bEscritura.booleanValue()
	 */
	public boolean getValue(){
		return bEscritura.booleanValue();	
	}
	
	/**
	 * Función que recibe True o False para 
	 * determinar la escritura de una pagina
	 * @param b boolean Recibe True o False
	 */
	public void setValue(boolean b)
	{
		bEscritura = new Boolean(b);
	}

}

