package com.meve.sigma.util;

public class Estatus {

	public static final int ASU_EN_RECEPCION = 0;

	public static final int ASU_POR_TURNAR = 1;

	public static final int ASU_TURNADO = 2;

	public static final int ASU_TERMINADO = 3;

	public static final int INS_POR_TURNAR = 0;

	public static final int INS_POR_ATENDER = 1;

	public static final int INS_EN_TRAMITE = 2;
	
	public static final int INS_RECHAZADA = 3;
	
	public static final int INS_TERMINADA = 4;
	
	public static final int OV_POR_TURNAR=1;
	
	public static final int OV_TURNADA=2;
	
	public static final int OV_TERMINADA=4;

	public static String getAsuntoEstatus(int estatus) {
		switch (estatus) {
		case ASU_EN_RECEPCION:
			return "En Recepción";
		case ASU_POR_TURNAR:
			return "Por Turnar";
		case ASU_TURNADO:
			return "En Trámite";
		case ASU_TERMINADO:
			return "Teminado";
		default:
			return "N/A";

		}

	}
	
	public static String getInstruccionEstatus(int estatus) {
		switch (estatus) {
		case INS_POR_TURNAR:
			return "Por Turnar";
		case INS_POR_ATENDER:
			return "Por Atender";
		case INS_EN_TRAMITE:
			return "En Trámite";
		case INS_TERMINADA:
			return "Terminada";
		case INS_RECHAZADA:
			return "Rechazada";
		default:
			return "N/A";

		}

	}
	
	public static String getOtrasVentanillasEstatus(int estatus) {;
		switch (estatus) {
		case OV_POR_TURNAR:
			return "Por Turnar";
		case OV_TURNADA:
			return "En Trámite";
		case OV_TERMINADA:
			return "Terminada";
		default:
			return "N/A";

		}

	}

}
