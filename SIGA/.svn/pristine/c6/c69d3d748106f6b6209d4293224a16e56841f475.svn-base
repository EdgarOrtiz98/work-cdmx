<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE taglib
    PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
    "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>

  <tlib-version>1.0</tlib-version>
  <jsp-version>1.2</jsp-version>
  <short-name>pruebas</short-name>
  <uri>http://supertravel/taglib</uri>
  <description>
    Unas pruebas
  </description>

  <tag>
    <name>hello</name>
    <tag-class>supertravel.HelloUser</tag-class>
    <description>Saluda al usuario</description>
    <attribute>
       <name>username</name>
       <required>true</required>
       <rtexprvalue>true</rtexprvalue>
    </attribute>
  </tag>       

  <tag>
    <name>footnote</name>
    <tag-class>supertravel.Footnote</tag-class>
    <description>Agrega una nota de pie de pagina</description>
    <attribute>
       <name>text</name>
       <required>true</required>
    </attribute>
  </tag>       

  <tag>
    <name>footnotes</name>
    <tag-class>supertravel.Footnotes</tag-class>
    <description>Despliega las notas de pie de pagina</description>
    <variable>
      <name-given>number</name-given>
      <variable-class>String</variable-class>
      <declare>true</declare>
      <scope>NESTED</scope>
    </variable>
    <variable>
      <name-given>text</name-given>
      <variable-class>String</variable-class>
      <declare>true</declare>
      <scope>NESTED</scope>
    </variable>
  </tag>       

</taglib>
